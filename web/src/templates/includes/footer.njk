{% set footer = site.footer %}
<div class="rel">
  <div
    class="abs fill-y bg-gray bh wct js-footerGhost"
    style="left: {{ 5.5 * active }}rem; right: {{ 5.5 * diff }}rem;"
  ></div>
  <footer class="f24 lh125 ph25 bg-gray bt pt40 pb20 rel z2 js-footer">
    <div class="df jcb mb60 mhn10 rel z1">
      <div class="w40 ph10">
        <h3 class="ttu mb30">{{ footer.newsletterHeading }}</h3>
        {% include 'signup.njk' %}
      </div>
      <div class="w50 ph10">
        <h3 class="ttu mb20">{{ footer.contactHeading }}</h3>
        <div class="df mhn10 mb30">
          <div class="w50 ph10">
            <p>{{ footer.addressLine1 }}</p>
            <p>{{ footer.addressLine2 }}</p>
          </div>
        </div>
        <div>
          <a class="inline-link mr25" href="mailto:{{ footer.emailAddress }}">Email</a>
          <a
            class="inline-link mr25"
            href="https://instagram.com/{{ footer.instagramHandle }}"
            target="_blank"
            rel="noopener noreferrer"
          >Instagram</a>
          <a
            class="inline-link"
            href="{{ footer.spotifyLink }}"
            target="_blank"
            rel="noopener noreferrer"
          >Spotify</a>
        </div>
      </div>
    </div>
    <p class="df aic">
      <span class="dib f24 lh125 mr5">Â©</span>
      <span class="dib f18 lh166">{{ footer.copyrightText }}</span>
    </p>
    {# <div class="badge abs right bottom mr30 mb30 ba bg-gray br50 df fc jcb" data-component="badge">
