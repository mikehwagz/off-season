{% set footer = site.footer %}
{% set bgColor = footer.bgColor %}
<div class="rel">
  <div
    class="abs fill-y bg-gray wct dn l:db js-footerGhost"
    style="left: {{ 5.5 * active }}rem; right: {{ 5.5 * diff }}rem;"
  ></div>
  <footer class="footer f22 l:f24 lh125 pl20 l:pl35 pr20 l:pr30 bg-gray bt pt40 pb20 rel z2 df l:db fc aic js-footer" style="background-color: {{ bgColor }}">
    <div class="l:df jcb mb50 l:mb60 l:mhn10 rel z1 x">
      <div class="l:w40 l:ph10 mb50 l:mb0">
        <h3 class="ttu mb20 l:mb30">{{ footer.newsletterHeading }}</h3>
        {% include 'signup.njk' %}
      </div>
      <div class="l:w50 l:ph10">
        <h3 class="ttu mb15 l:mb20">{{ footer.contactHeading }}</h3>
        <div class="mb30">
          <p>{{ footer.addressLine1 }}</p>
          <p>{{ footer.addressLine2 }}</p>
        </div>
        <div>
          <a
            class="inline-link mr25"
            href="mailto:{{ footer.email }}"
            data-component="emailLink"
            style="--bg: {{ bgColor }}"
            data-router-disabled
          >Email</a>
          <a
            class="inline-link mr25"
            href="https://instagram.com/{{ footer.instagramHandle }}"
            target="_blank"
            rel="noopener noreferrer"
            style="--bg: {{ bgColor }}"
          >Instagram</a>
          <a
            class="inline-link"
            href="{{ footer.spotifyLink }}"
            target="_blank"
            rel="noopener noreferrer"
            style="--bg: {{ bgColor }}"
          >Spotify</a>
        </div>
      </div>
    </div>
    <div class="badge l:abs mb50 l:mb0" aria-hidden="true">
      {% include 'badge.njk' %}
    </div>
    <p class="copyright l:abs bottom left l:pl35 l:pb20 df jcc aic tc l:tl">
      <span class="dib f24 lh125 mr5">Â©</span>
      <span class="dib f18 lh166">{{ footer.copyrightText }}</span>
    </p>
  </footer>
</div>