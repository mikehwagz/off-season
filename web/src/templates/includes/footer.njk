{% set footer = site.footer %}
{% set bgColor = footer.bgColor %}
<div class="rel">
  <div
    class="abs fill-y bg-gray wct js-footerGhost"
    style="left: {{ 5.5 * active }}rem; right: {{ 5.5 * diff }}rem;"
  ></div>
  <footer class="footer f24 lh125 pl35 pr30 bg-gray bt pt40 pb20 rel z2 js-footer" style="background-color: {{ bgColor }}">
    <div class="df jcb mb60 mhn10 rel z1">
      <div class="w40 ph10">
        <h3 class="ttu mb30">{{ footer.newsletterHeading }}</h3>
        {% include 'signup.njk' %}
      </div>
      <div class="w50 ph10">
        <h3 class="ttu mb20">{{ footer.contactHeading }}</h3>
        <div class="df mhn10 mb30">
          <div class="w50 ph10">
            <p>{{ footer.addressLine1 }}</p>
            <p>{{ footer.addressLine2 }}</p>
          </div>
        </div>
        <div>
          <a
            class="inline-link mr25"
            href="mailto:{{ footer.emailAddress }}"
            style="--bg: {{ bgColor }}"
          >Email</a>
          <a
            class="inline-link mr25"
            href="https://instagram.com/{{ footer.instagramHandle }}"
            target="_blank"
            rel="noopener noreferrer"
            style="--bg: {{ bgColor }}"
          >Instagram</a>
          <a
            class="inline-link"
            href="{{ footer.spotifyLink }}"
            target="_blank"
            rel="noopener noreferrer"
            style="--bg: {{ bgColor }}"
          >Spotify</a>
        </div>
      </div>
    </div>
    <p class="copyright abs bottom left pl35 pb20 df aic">
      <span class="dib f24 lh125 mr5">Â©</span>
      <span class="dib f18 lh166">{{ footer.copyrightText }}</span>
    </p>
    <div class="badge abs bottom right" aria-hidden="true">
      {% include 'badge.njk' %}
    </div>
  </footer>
</div>