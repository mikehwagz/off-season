<nav class="abs fill df z1 pen js-nav">
  {% for item in site.nav %}
    <div
      class="{% classNames
        'js-navItems',
        'fg1' if active == loop.index0
      %}"
    >
      <a
        class="{% classNames
          'tab db pea js-tabs',
          '' if loop.first else 'bl',
          '' if active == loop.index0 else 'bg-gray'
        %}" 
        href="/{{ item.slug }}"
        data-transition="tab"
      >
        {% set labelCx = 'tab__label abs f32 lh100' %}
        {% if loop.first %}
          {% if isProject %}
            <div class="{% classNames labelCx, 'js-backLabel' %}">
              <span class="tab__arrow mr15">
                {% include 'arrowBack.njk' %}
              </span><span>Back</span>
            </div>
          {% else %}
            <div class="{% classNames labelCx, 'js-workLabel' %}">
              <span class="tab__dot js-dots"></span><span>{{ item.title }}</span>
            </div>
          {% endif %}
        {% else %}
          <div class="{% classNames labelCx %}">
            <span class="tab__dot js-dots"></span><span>{{ item.title }}</span>
          </div>
        {% endif %}
      </a>
    </div>
  {% endfor %}
</nav>