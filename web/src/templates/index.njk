---
layout: base.njk
title: Work
---
<div class="abs fill wco" data-router-view="default">
  
  {% set active = 0 %}
  {% include 'nav.njk' %}

  <div class="abs fill oy df fc jcb js-scroll">
    <ul class="pl115 pr200 pt35 mb100">
      {% for project in projects %}
        <li class="mb30 oh">
          <style>#{{ project.slug }}:hover { color: {{ project.themeColor }} }</style>
          <a
            id="{{ project.slug }}"
            class="dib sans f92 lh102 js-links"
            href="/project/{{ project.slug }}"
            data-transition="toProject"
            data-component="projectLink"
          >
            {{ project.title }}
          </a>
        </li>
      {% endfor %}
    </ul>

    {% include 'footer.njk' %}
  </div>
</div>